[user]
	email = ekk0809@gmail.com
	name = elvis kahoro
[core]
	excludesfile = ~/.gitignore
	editor = vim
[push]
  	default = simple
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
	ui = auto
[alias]
    a = add
    au = add -u
    aa = add --all
	b = checkout
	bc = checkout -b
	br = branch -a
	bl = branch -a
	bd = branch -d
	bm = branch --merged
	bn = branch --no-merged
    c = commit
	ca = commit --amend --no-edit
    cm = commit -m
    cp = commit -p
	d = diff
    ds = diff --staged
    p = stash pop
	s = status
    st = stash
    sta = stash apply
    std = stash drop
    stl = stash list
    stp = stash --patch
    sts = stash show
    si = submodule init
	su = submodule update
	spull = submodule foreach --recursive "git pull"
	smain = submodule foreach --recursive "git checkout main"
	sstash = submodule foreach --recursive "git stash"
	strack = stash --include-untracked
    tree = ls-tree -r --full-tree --name-only
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[http]
	cookiefile = ~/.config/git/.gitcookies
[commit]
	template = ~/.config/git/.gitmessage
[pull]
	rebase = true
[fetch]
	prune = true
[diff]
	colorMoved = zebra
[init]
	defaultBranch = main
